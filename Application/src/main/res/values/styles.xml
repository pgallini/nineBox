<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/text_dark</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>

    </style>

    <style name="WindowTitleBackground" >
        <item name="android:background">@android:color/transparent
        </item>
    </style>

    <style name="Widget" />

    <style name="Widget.SampleMessage">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Widget.SampleMessageTile">
        <item name="android:background">@drawable/tile</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowDy">-3.5</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="Widget.DescriptionBar">
        <item name="android:background">#fb3</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/page_margin</item>
        <item name="android:paddingRight">@dimen/page_margin</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="ScrollList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/page_margin</item>
        <item name="android:paddingRight">@dimen/page_margin</item>
        <item name="android:scrollIndicators">right</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">#ffffff</item>
        <item name="android:smoothScrollbar">false</item>
    </style>

    <style name="MainButtonCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/card_image_height</item>
        <item name="android:layout_gravity">center|center_horizontal</item>
        <item name="android:layout_alignParentRight">false</item>
        <item name="android:layout_alignWithParentIfMissing">false</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MainButtonLayout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <!--<item name="android:padding">@dimen/abc_button_padding_horizontal_material</item>-->
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MainButton" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@color/ColorAccent</item>
        <item name="android:layout_width">@dimen/button_main_width</item>
        <item name="android:layout_height">@dimen/button_main_height</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">@dimen/global_elevation</item>"
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/ColorPrimaryDark</item>
    </style>

    <style name="MainButtonText" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/card_title_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/md_keylines</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/ColorPrimaryDark</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_light</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_marginLeft">@dimen/cardhead_leftmargin</item>
        <item name="android:layout_marginRight">@dimen/cardhead_rightmargin</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/text_light</item>
        <item name="colorControlNormal">@color/text_light</item>
        <item name="colorControlActivated">@color/ColorAccent</item>
    </style>

    <style name="TextLabelDark" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_dark</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_marginLeft">@dimen/cardhead_leftmargin</item>
        <item name="android:layout_marginRight">@dimen/cardhead_rightmargin</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/text_dark</item>
        <item name="colorControlNormal">@color/text_dark</item>
        <item name="colorControlActivated">@color/text_grey</item>
    </style>

    <style name="EditTextStyle" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="EditMultiLineTextStyle" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">4</item> <!-- Total Lines prior display -->
        <item name="android:minLines">2</item> <!-- Minimum lines -->
        <item name="android:gravity">top|left</item> <!-- Cursor Position -->
        <item name="android:maxLines">6</item> <!-- Maximum Lines -->
        <item name="android:scrollbars">vertical</item> <!-- Vertical Scroll Bar -->
    </style>

    <style name="Text_Instructional" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">10pt</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
    </style>

    <style name="Text_Bold" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
    </style>

    <style name="details_text_main" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="details_text_sub" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal|left</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>

    <style name="details_edit_button" parent="TextAppearance.AppCompat">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/cardhead_rightmargin</item>
        <item name="android:gravity">top|right</item>
        <item name="android:paddingLeft">10dp</item>
        <!--<item name="android:layout_weight">2</item>-->
        <!--<item name="android:layout_gravity">center_horizontal|right</item>-->
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/text_dark</item>
        <item name="colorControlActivated">@color/ColorAccent</item>
        <item name="android:buttonTint">@color/ColorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
        <item name="android:colorAccent">@color/ColorAccent</item>
    </style>

    <style name="Slidder_Legend" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">10pt</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/text_dark</item>
    </style>

</resources>
